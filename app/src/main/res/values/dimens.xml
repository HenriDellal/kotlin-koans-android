<resources>

    <!-- padding -->
    <dimen name="padding_inline">4dp</dimen>
    <dimen name="padding_default">8dp</dimen>
    <dimen name="padding_large">16dp</dimen>
    <dimen name="padding_huge">32dp</dimen>

    <!-- card view with useCompatPadding=true already has 3dp horizontal for shadow -->
    <!-- in a grid, with 2.5dp on each side the inter-card space becomes 3+5=8dp -->
    <!-- an extra 2.5dp is added to the margins for items on the edge -->
    <dimen name="card_grid_hspace">2.5dp</dimen>
    <dimen name="card_grid_hmargin">2.5dp</dimen>

    <!-- card view with useCompatPadding=true already has 4dp vertical for shadow -->
    <!-- in a grid, with 2dp on top and bottom, the inter-card space becomes 4+4=8dp -->
    <!-- an extra 2dp is added to the margins for items on the edge -->
    <dimen name="card_grid_vspace">2dp</dimen>
    <dimen name="card_grid_vmargin">2dp</dimen>
    <dimen name="card_grid_fab_margin">82dp</dimen> <!-- padding_fab_normal - 4dp (vertical shadow compat padding) - card_grid_vmargin -->

    <!-- text sizes -->
    <dimen name="text_size_xsmall">12sp</dimen>
    <dimen name="text_size_small">14sp</dimen>
    <dimen name="text_size_xmedium">16sp</dimen>
    <dimen name="text_size_medium">18sp</dimen>
    <dimen name="text_size_large">24sp</dimen>
    <dimen name="text_size_ultralarge">34sp</dimen>
    <dimen name="text_size_hyperlarge">72sp</dimen>

    <!-- view dimensions and spacing -->
    <dimen name="responsive_breakpoint">480dp</dimen>

    <dimen name="touch_size_default">48dp</dimen>
    <dimen name="touch_size_comfy">56dp</dimen>

    <dimen name="toolbar_height">@dimen/touch_size_comfy</dimen>
    <dimen name="toolbar_elevation">4dp</dimen>
    <dimen name="tabbar_height">@dimen/touch_size_default</dimen>
    <dimen name="fab_margin">16dp</dimen>

    <dimen name="run_status_collapsed">@dimen/touch_size_comfy</dimen>
    <dimen name="view_koan_margin_bottom">@dimen/run_status_collapsed</dimen>

    <dimen name="progress_widget_height">160dp</dimen>

    <dimen name="splash_icon_size">125dp</dimen>

</resources>
