<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="@string/pref_auto_pair"
        android:title="@string/pref_auto_pair_title"
        android:summary="@string/pref_auto_pair_summary"
        android:defaultValue="@bool/pref_auto_pair_default" />

    <SwitchPreference
        android:key="@string/pref_auto_indent"
        android:title="@string/pref_auto_indent_title"
        android:summary="@string/pref_auto_indent_summary"
        android:defaultValue="@bool/pref_auto_indent_default" />

    <EditTextPreference
        android:key="@string/pref_indent_size"
        android:title="@string/pref_indent_size_title"
        android:summary="@string/pref_indent_size_summary"
        android:defaultValue="@integer/pref_indent_size_default"
        android:inputType="number" />

</PreferenceScreen>
